{
  "name": "winston-datadog-browser",
  "version": "0.0.0-development",
  "description": "Send winston logs to Datadog via the browser logs SDK.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "keywords": [
    "browser",
    "datadog",
    "error",
    "log",
    "logger",
    "logging",
    "logs",
    "plugin",
    "typescript",
    "winston"
  ],
  "scripts": {
    "lint": "biome check src",
    "lint:fix": "biome check src --write",
    "build": "tsc",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "prepublish": "npm run build",
    "prepare": "husky",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/manbearwiz/winston-datadog-browser.git"
  },
  "author": "Kevin Brey",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/manbearwiz/winston-datadog-browser/issues"
  },
  "homepage": "https://github.com/manbearwiz/winston-datadog-browser#readme",
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-angular": "^19.3.0",
    "@tsconfig/recommended": "^1.0.3",
    "@tsconfig/strictest": "^2.0.2",
    "@types/node": "^22.17.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^16.7.1",
    "husky": "^9.0.11",
    "lint-staged": "^16.1.6",
    "prettier": "^3.0.2",
    "semantic-release": "^24.0.0",
    "typescript": "^5.2.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@datadog/browser-logs": "^4.0.0 || ^5.0.0",
    "winston": "^3.3.3",
    "winston-transport": "^4.4.0"
  },
  "lint-staged": {
    "*.ts": "vitest related --run",
    "*": "biome check --no-errors-on-unmatched --files-ignore-unknown=true --write"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "overrides": {
    "tsconfig-paths": "^4.0.0"
  }
}
